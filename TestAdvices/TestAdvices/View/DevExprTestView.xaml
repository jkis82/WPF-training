        mc:Ignorable="d"
        Title="DevExprTestView" Height="300" Width="300">
   <Grid>

      <dxg:GridControl AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" HorizontalAlignment="Left" Margin="1" VerticalAlignment="Top">
